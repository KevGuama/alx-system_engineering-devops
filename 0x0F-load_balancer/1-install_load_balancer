#!/usr/bin/env bash
# Install your load balancer
sudo apt-get -y update
sudo apt-get -y install haproxy
sudo chown  $USER:$USER /etc/haproxy/haproxy.cfg

echo "
frontend estebanweb
    bind *:80
    mode http
    default_backend app
backend app
    balance roundrobin
    server 1542-web-01 100.26.215.113 check
    server 1542-web-02 	100.25.190.11 check" >> /etc/haproxy/haproxy.cfg

sudo service haproxy restart
